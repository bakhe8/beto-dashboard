{
  "name": "betodashboard",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:demo": "turbo run dev --filter=betodashboard-demo",
    "build": "turbo run build",
    "build:core": "turbo run build --filter=@betodashboard/core",
    "analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "test": "turbo run test",
    "test:core": "turbo run test --filter=@betodashboard/core",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "audit:prod": "npm audit --production",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "bootstrap:ps1": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/bootstrap_betodashboard.ps1 -InPlace",
    "bootstrap:sh": "bash scripts/bootstrap_betodashboard_inplace.sh",
    "prepare": "husky",
    "serve:prod": "node scripts/serve.js",
    "test:e2e:prod": "npm run build && playwright test -c playwright.config.prod.ts"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@playwright/test": "^1.45.0",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/html": "^8.3.6",
    "@storybook/html-vite": "^8.3.6",
    "@testing-library/dom": "^10.1.0",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.6",
    "axe-core": "^4.9.1",
    "eslint": "^9.4.0",
    "express": "^4.21.1",
    "helmet": "^7.1.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.4.5",
    "vite": "^7.1.12",
    "vitepress": "^1.5.0",
    "vitest": "^4.0.6",
    "turbo": "^2.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "dompurify": "^3.1.5",
    "postcss": "^8.4.38",
    "postcss-nesting": "^12.1.5",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
